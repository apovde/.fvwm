+ I + DynamicPopUpAction MakeMenu-WeatherReport
#+ I Piperead 'echo "+ \\"$(cat $HOME/.weather/$(cat $HOME/.weather/station).latest12 | head -n 1)\\" Nop"'
+ I Piperead 'station=$(cat $HOME/.weather/station); cat $HOME/.weather/$station.latest12 | tail -n12 | while read line; do echo "+ \\"$line\\" Nop"; done'

