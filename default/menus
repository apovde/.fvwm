+ I DestroyMenu /Fvwm/GtkThemes
+ I AddToMenu /Fvwm/GtkThemes
+ I + DynamicPopUpAction MakeMenu-GtkThemes
+ I Piperead 'echo -e "+ \"Current:\\\\ `cat .gtkrc-2.0 | grep themes | sed -e \'s/.*themes\\///g;s/\\/.*//g\'`\" Title"'
+ I Piperead 'ls -1 ~/.themes/ | sed -e \'s/\ /\\\\\\\\ /g\' | while read line; do echo "+ \"$line\" Exec exec gtk-theme-switch2 .themes/$line"; done'
+ I Piperead 'ls -1 /usr/share/themes/ | sed -e \'s/\ /\\\\\\\\ /g\' | while read line; do echo "+ \"$line\" Exec exec gtk-theme-switch2 /usr/share/themes/$line"; done'

