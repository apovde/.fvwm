+ 'Stop' Exec exec $[infostore.cmd.term] -e sh $[FVWM_USERDIR]/bin/daemon.sh cups stop
#+ 'Start' Exec exec $[infostore.cmd.term] -e sudo /etc/init.d/cups start
#+ 'Stop' Exec exec $[infostore.cmd.term] -e sudo /etc/init.d/cups stop

