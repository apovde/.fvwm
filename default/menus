# xcompmgr {{{2

DestroyMenu /Xcompmgr
AddToMenu /Xcompmgr
+ DynamicPopUpAction MakeMenu-Xcompmgr

DestroyFunc MakeMenu-Xcompmgr
AddToFunc MakeMenu-Xcompmgr
+ I DestroyMenu /Xcompmgr
+ I AddToMenu /Xcompmgr
+ I + DynamicPopUpAction MakeMenu-Xcompmgr
+ I Piperead 'pid=`pidof xcompmgr`; if [ $pid \\> 0 ]; then echo "+ \"Running\" Title"; echo "+ \"[stop]\" XcompmgrDisable"; else echo "+ \"Not\\\\ running\" Title"; echo "+ \"[start]\" XcompmgrEnable"; fi'
#+ I + "" Nop
#+ I + "" Nop
#+ I + "Profiles"		Popup /Xcompmgr/Profiles
#+ I + "" Nop
#+ I + "" Nop
#+ I + "Shadow"			Popup /Xcompmgr/Shadow
#+ I + "Radius"			Popup /Xcompmgr/Radius
#+ I + "Offset"			Popup /Xcompmgr/Offset
#+ I + "Fade"			Popup /Xcompmgr/Fade
+ I + "" Nop
+ I + "Enable on startup"	SetXcompmgrOnStartup

DestroyFunc XcompmgrEnable
AddToFunc XcompmgrEnable
+ I NotifyStep Starting Xcompmgr...
#+ I Piperead 'fork-exec echo "Loading Xcompmgr..." |  osd_cat -p middle -o -40 -O 1 -u black -A center -d 4 -f -*-helvetica-*-r-*-*-24-*-*-*-*-*-*-* -c white'
+ I Exec exec xcompmgr -o 0.5 -l -12 -t -12 -Ff -I 0.1 -O 0.05
+ I NotifyMe Xcompmgr started

DestroyFunc XcompmgrDisable
AddToFunc XcompmgrDisable
+ I Exec exec killall xcompmgr
+ I NotifyMe Xcompmgr stopped

DestroyFunc SetXcompmgrOnStartup
AddToFunc SetXcompmgrOnStartup
+ I Piperead 'echo XcompmgrEnable > $[FVWM_USRDIR]/prefs/Xcompmgr'


# 3ddeskd {{{2

DestroyMenu /3ddesk
AddToMenu /3ddesk
+ DynamicPopUpAction MakeMenu-3ddeskd

DestroyFunc MakeMenu-3ddeskd
AddToFunc MakeMenu-3ddeskd
+ I DestroyMenu /3ddesk
+ I AddToMenu /3ddesk
+ I + DynamicPopUpAction MakeMenu-3ddeskd
+ I Piperead 'pid=`pidof 3ddeskd`; if [ $pid \\> 0 ]; then echo "+ \"Running\" Title"; echo "+ \"[stop]\" 3ddeskdDisable"; else echo "+ \"Not\\\\ running\" Title"; echo "+ \"[start]\" 3ddeskdEnable"; fi'
+ I + "" Nop
+ I + "Configure"	Exec exec $[infostore.cmd.term] -e sudo vim /etc/3ddesktop.conf

DestroyFunc 3ddeskdEnable
AddToFunc 3ddeskdEnable
+ I Exec exec 3ddeskd --wm=enlightenment --acquire
+ I BindPager3ddesk
+ I NotifyMe 3ddeskd started

DestroyFunc 3ddeskdDisable
AddToFunc 3ddeskdDisable
+ I Exec exec killall 3ddeskd
+ I BindPagerDefaults
+ I NotifyMe 3ddeskd stopped


#}}}1 

