+ I Piperead 'echo -e "+ \"Current:\\\\ `cat $[FVWM_USERDIR]/prefs/Colorset | grep Read | cut -d\'/\' -f4`\" Title"'
+ I Piperead 'ls -1 $[FVWM_USERDIR]/$[ThemePath]/color | while read line; do echo -e "+ \"$line\" SelectColorset $line"; done'

