DestroyMenu /System
AddToMenu /System
#Piperead 'echo + \"`/etc/issue`\" Title'	# permission denied
+ "&Mount"			Popup /System/Mount
+ "&Daemons"			Popup /Daemons
+ "" Nop
+ "Packages"			Popup /System/Packages
+ "" Nop
+ "Cronjobs"			Exec exec $[infostore.cmd.term] -tint red -title crontab -e crontab -e
+ "Udev"			Popup /System/Udev
+ "modconf"			Exec exec $[infostore.cmd.term] -tint red -geometry 119x71 -title modconf -e sudo modconf
+ "" Nop
+ "&CPU Frequency scaling"	Popup /System/CpuFreq
+ "&Laptop mode"		Popup /System/LaptopMode
+ "" Nop
+ "&Thinklight"			Popup /Systen/ThinkLight
+ "&Bluetooth"			Popup /Systen/Bluetooth
+ "" Nop
+ "Edit mailcap"		Exec exec $[infostore.cmd.term] -tint red -title mailcap -e sudo vim /etc/mailcap
+ "Edit x-www-browser"		Exec exec $[infostore.cmd.term] -tint red -title x-www-browser -e sudo update-alternatives --config x-www-browser
+ "Reconfigure timezone"	Exec exec $[infostore.cmd.term] -e sh $[FVWM_USERDIR]/bin/timezone.sh

# PACKAGES {{{2

DestroyMenu /System/Packages
AddToMenu /System/Packages
+ "List &packages"		Exec exec $[infostore.cmd.term] -geometry 119x71 -title dpkg-list -e sh $[FVWM_USERDIR]/bin/pkglist.sh
+ "" Nop
+ "[sudo] Edit sources.list"	Exec exec $[infostore.cmd.term] -e sudo vim /etc/apt/sources.list

# CPUFREQ {{{2

DestroyMenu /System/CpuFreq
AddToMenu /System/CpuFreq
+ DynamicPopUpAction MakeMenu-CpuFreq

DestroyFunc MakeMenu-CpuFreq
AddToFunc MakeMenu-CpuFreq
+ I DestroyMenu /System/CpuFreq
+ I AddToMenu /System/CpuFreq
+ I Piperead 'sh $[FVWM_USERDIR]/bin/sys.cpufreq.sh check'
+ I + DynamicPopUpAction MakeMenu-CpuFreq

DestroyFunc CpufreqScalingEnable
AddToFunc CpufreqScalingEnable
+ I Exec exec $[infostore.cmd.term] -e sudo sh $[FVWM_USERDIR]/bin/sys.cpufreq.sh enable
+ I NotifyMe CPU frequency scaling enabled

DestroyFunc CpufreqScalingDisable
AddToFunc CpufreqScalingDisable
+ I Exec exec $[infostore.cmd.term] -e sudo sh $[FVWM_USERDIR]/bin/sys.cpufreq.sh disable
+ I NotifyMe CPU frequency scaling disabled

#}}}2
# CPU menu {{{2

DestroyMenu /Cpu
AddToMenu /Cpu
+ DynamicPopUpAction MakeMenu-Cpu

DestroyFunc MakeMenu-Cpu
AddToFunc MakeMenu-Cpu
+ I DestroyMenu /Cpu
+ I AddToMenu /Cpu
+ I + DynamicPopUpAction MakeMenu-Cpu
+ I Piperead 'sh $[FVWM_USERDIR]/bin/sys.cpufreq.sh check verbose'

DestroyMenu /Cpu/Frequency
AddToMenu /Cpu/Frequency
+ "2200 MHz"	Exec exec $[infostore.cmd.term] -e $[FVWM_USERDIR]/bin/sys.cpufreq.sh set 2200
+ "1600 MHz"	Exec exec $[infostore.cmd.term] -e $[FVWM_USERDIR]/bin/sys.cpufreq.sh set 1600
+ "1200 MHz"	Exec exec $[infostore.cmd.term] -e $[FVWM_USERDIR]/bin/sys.cpufreq.sh set 1200
+ "800 MHz"	Exec exec $[infostore.cmd.term] -e $[FVWM_USERDIR]/bin/sys.cpufreq.sh set 800

#}}}2
# LAPTOP MODE {{{2

DestroyMenu /System/LaptopMode
AddToMenu /System/LaptopMode
+ DynamicPopUpAction MakeMenu-LaptopMode

DestroyFunc MakeMenu-LaptopMode
AddToFunc MakeMenu-LaptopMode
+ I DestroyMenu /System/LaptopMode
+ I AddToMenu /System/LaptopMode
+ I + DynamicPopUpAction MakeMenu-LaptopMode
+ I Piperead 'state=`cat /proc/sys/vm/laptop_mode`; \
	if [ $state = 0 ]; then \
		echo "+ \"Not\\\\ active\" Title"; \
		echo "+ \"Start\" Exec exec $[infostore.cmd.term] -e sudo sh $[FVWM_USERDIR]/bin/sys.laptop-mode.sh start"; \
	else \
		echo "+ \"Active\" Title"; \
		echo "+ \"Stop\" Exec exec $[infostore.cmd.term] -e sudo sh $[FVWM_USERDIR]/bin/sys.laptop-mode.sh stop"; \
	fi'

#}}}2
