#+ "&Home (Remote)"	Nop
+ "AP-&G3 (Local)"	Exec exec $[infostore.cmd.term] -tint yellow -e sh $[FVWM_USERDIR]/bin/ssh.sh 192.168.0.114
+ "AP-DS (Local)"	Exec exec $[infostore.cmd.term] -tint yellow -e sh $[FVWM_USERDIR]/bin/ssh.sh root@192.168.0.111
+ "Sheeva (Local)"	Exec exec $[infostore.cmd.term] -tint yellow -e sh $[FVWM_USERDIR]/bin/ssh.sh sheeva
+ "" Nop
+ "HTWK"		Exec exec $[infostore.cmd.term] -tint yellow -e sh $[FVWM_USERDIR]/bin/ssh.sh apopov@goliath.imn.htwk-leipzig.de
+ "" Nop
+ "jow.artofcoding.de"	Exec exec $[infostore.cmd.term] -tint yellow -e sh $[FVWM_USERDIR]/bin/ssh.sh xyron@jow.artofcoding.de
+ "&ffx.subsignal.org"	Exec exec $[infostore.cmd.term] -tint yellow -e sh $[FVWM_USERDIR]/bin/ssh.sh ffx.subsignal.org
+ "" Nop
#+ "&Sven (RootServer)"	Exec exec $[infostore.cmd.term] -tint yellow -e sh $[FVWM_USERDIR]/bin/ssh.sh 87.106.81.130
+ "&Sven (RootServer)"	Exec exec $[infostore.cmd.term] -tint yellow -e sh $[FVWM_USERDIR]/bin/ssh.sh 83.133.124.84
+ "&Sven (Desktop)"	Exec exec $[infostore.cmd.term] -tint yellow -e sh $[FVWM_USERDIR]/bin/ssh.sh sk.wwsnet.net
+ "" Nop
+ "Sub&lab"		Popup /Network/Ssh/Sublab
+ "nuwiki.openwrt.org"	Exec exec $[infostore.cmd.term] -tint yellow -e sh $[FVWM_USERDIR]/bin/ssh.sh xyron@nuwiki.openwrt.org

# 1.2 SUBMENUS {{{3

DestroyMenu /Network/Ssh/Mount
AddToMenu /Network/Ssh/Mount
+ "Home	~"		Sshfs home anton
+ "AP-G3	~"	Sshfs ap-g3 anton
+ "" Nop
+ "Sven (RootServer)	~"	Sshfs 83.133.124.84 anton
+ "sublab.org	~"	Sshfs ffx.subsignal.org anton
+ "sublab.org	~"	Sshfs sublab.org xyron
+ "nuwiki.openwrt.org	~"	Sshfs nuwiki.openwrt.org xyron

DestroyFunc Sshfs
AddToFunc Sshfs
+ I Exec exec $[infostore.cmd.term] -e sh $[FVWM_USERDIR]/bin/sshfs.sh $0 $1

DestroyMenu /Network/Ssh/Sublab
AddToMenu /Network/Ssh/Sublab
+ "sublab.org"	Exec exec $[infostore.cmd.term] -tint yellow -e sh $[FVWM_USERDIR]/bin/ssh.sh xyron@sublab.org
+ "" Nop
